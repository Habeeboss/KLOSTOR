<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="container">
        <h1 class="text-center my-4">We hope you find what you need</h1>
    </div>
    <div class="container">
        <h1 class="text-center my-4">Search Results</h1>
        <div class="row">
            <% results.forEach((product) => { %>
                <div class="col-md-4 mb-4">
                    <div class="product-card">
                        <div class="product-image">
                            <img src="<%= product.urlImage %>" alt="<%= product.productName %>">
                        </div>
                        <div class="product-details">
                            <h5><%= product.productName %></h5>
                            <p class="price">
                                <% if (product.discountPrice) { %>
                                    <b>$<%= product.discountPrice %></b>
                                    <span style="text-decoration: line-through;">$<%= product.originalPrice %></span>
                                <% } else { %>
                                    <b>$<%= product.originalPrice %></b>
                                <% } %>
                            </p>
                            <p class="card-text"><b>Brand:</b> <%= product.productBrand %></p>
                            <p class="card-text"><b>In Stock:</b> <%= product.inStock ? 'Yes' : 'No' %></p>
                            <div class="d-flex justify-content-between">
                                <a href="/preview/<%= product._id %>" class="btn btn-primary btn-sm">
                                    <i class="fas fa-eye me-1"></i> Preview
                                </a>
                                <button onclick="addToCart('<%= product._id %>')" class="btn btn-success btn-sm">
                                    <i class="fas fa-shopping-cart me-1"></i> Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>