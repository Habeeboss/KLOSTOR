                            <span class="disabled-link">Product Page</span><br><br>
                            <span class="disabled-link">Orders</span>
                        <% } %>
                        <br><br><br><br>
                    </div>
                </div>
                
                <div class="col-sm-7">
                    <% if (!isAuthenticated) { %>
                        <div class="alert alert-danger">Access Denied. Admins only.</div>
                    <% } else { %>

                    <button class="btn btn-primary mb-3" data-toggle="modal" data-target="#categoryModal">Create a new Category</button>

