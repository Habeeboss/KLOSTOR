    <title>Admin Dashboard</title>

    <style>
        :root {
            --tw-ring-offset-width: 0px;
            --tw-ring-offset-color: #fff;
            --tw-ring-color: rgba(59, 130, 246, 0.5);
            --tw-ring-offset-shadow: 0 0 #0000;
            --tw-ring-shadow: 0 0 #0000;
            --tw-shadow: 0 0 #0000;
            --tw-shadow-colored: 0 0 #0000;
            --tw-blur: ;
        }
    
        
        .product-card {
            background: white;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            padding: 15px;
            text-align: center;
            transition: transform 0.3s ease-in-out;
        }
    
        .product-card:hover {
            transform: translateY(-5px);
        }
    
       
        .product-image {
            width: 100%;
            height: 250px; 
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }
    
        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: contain; 
        }
    
        
        .product-details h5 {
            font-size: 18px;
            font-weight: bold;
            margin-top: 10px;
        }
    
        .price {
            font-size: 16px;
            margin: 5px 0;
        }
    
        .price b {
            color: #28a745;
            font-weight: bold;
        }
    
        .price span {
            color: #6c757d;
        }
    
        .star-rating {
            font-size: 24px;
            cursor: pointer;
        }
    
        .star {
            color: gray;
            transition: color 0.2s ease, outline 0.2s ease;
            outline: 2px solid transparent;
            outline-offset: 2px;
        }
    
        .star.active, .star:hover {
            color: gold;
            outline-color: var(--tw-ring-color);
        }
    
        .star:focus {
            outline-color: var(--tw-ring-color);
        }
    
        .category-suggestions {
            position: absolute;
            background: white;
            border: 1px solid #ccc;
            width: 100%;
            z-index: 1000;
            display: none;
            box-shadow: var(--tw-ring-offset-shadow, 0 0 #0000), var(--tw-ring-shadow, 0 0 #0000), var(--tw-shadow, 0 0 #0000);
            outline: 2px solid transparent;
            outline-offset: 2px;
            transition: outline-color 0.2s ease-in-out;
        }
    
        .category-suggestions:focus-within {
            outline-color: var(--tw-ring-color);
        }
    
        .category-suggestions div {
            padding: 5px;
            cursor: pointer;
            outline: 2px solid transparent;
            outline-offset: 2px;
            transition: outline-color 0.2s ease-in-out;
        }
    
        .category-suggestions div:hover {
            background-color: #f8f9fa;
            outline-color: var(--tw-ring-color);
        }
    
        .category-suggestions div:focus {
            outline-color: var(--tw-ring-color);
        }
    
        .auth-forms {
            display: none;
            position: absolute;
            top: 60px;
            right: 0;
            background: #fff;
            padding: 20px;
            box-shadow: var(--tw-ring-offset-shadow, 0 0 #0000), var(--tw-ring-shadow, 0 0 #0000), var(--tw-shadow, 0 0 #0000);
            z-index: 1000;
            border-radius: 8px;
            outline: 2px solid transparent;
            outline-offset: 2px;
            transition: outline-color 0.2s ease-in-out;
        }
    
        .auth-forms:focus-within {
            outline-color: var(--tw-ring-color);
        }
    
        .sidenav {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1;
            top: 0;
            right: 0;
            background-color: #f8f9fa;
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
            box-shadow: var(--tw-ring-offset-shadow, 0 0 #0000), var(--tw-ring-shadow, 0 0 #0000), var(--tw-shadow, 0 0 #0000);
            outline: 2px solid transparent;
            outline-offset: 2px;
            transition: outline-color 0.2s ease-in-out;
        }
    
        .sidenav:focus-within {
            outline-color: var(--tw-ring-color);
        }
    
        .sidenav a {
            padding: 8px 8px 8px 32px;
            text-decoration: none;
            font-size: 18px;
            color: #000;
            display: block;
            transition: 0.3s;
            outline: 2px solid transparent;
            outline-offset: 2px;
        }
    
        .sidenav a:hover {
            color: #007bff;
            outline-color: var(--tw-ring-color);
        }
    
        .sidenav a:focus {
            outline-color: var(--tw-ring-color);
        }
    
        .sidenav .closebtn {
            position: absolute;
            top: 0;
            right: 25px;
            font-size: 36px;
            margin-left: 50px;
            outline: 2px solid transparent;
            outline-offset: 2px;
            transition: outline-color 0.2s ease-in-out;
        }
    
        .sidenav .closebtn:focus {
            outline-color: var(--tw-ring-color);
        }
        .password-container {
            position: relative;
            width: 100%; /* Full width */
        }
    
        .password-container input[type="password"],
        .password-container input[type="text"] {
            width: 100%;
            padding: 10px;
            padding-right: 40px; /* Space for the eye icon */
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
        }
    
        .toggle-password {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #777;
        }
    
        .toggle-password:hover {
            color: #333;
        }

        .toggle-password i {
        font-size: 1.2rem;
        pointer-events: none;
    }

       .auth-buttons {
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
        }

        .auth-modal {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.2);
            z-index: 1000;
            width: 90%;
            max-width: 400px;
        }

        .auth-modal.active {
            display: block;
        }

        .modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            z-index: 999;
        }

        .modal-overlay.active {
            display: block;
        }

        .auth-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .auth-switch {
            text-align: center;
            margin-top: 15px;
        }

        .auth-switch a {
            color: #007bff;
            cursor: pointer;
            text-decoration: none;
        }

        .close-auth {
            background: none;
            border: none;
            font-size: 24px;
            cursor: pointer;
        }
        @media (max-width: 768px) {
    .product-gallery {
        margin-bottom: 1rem;
    }
    
    .thumbnail-container {
        flex-wrap: wrap;
        justify-content: center;
    }
    
    .price-badge {
        font-size: 1.2rem;
    }
}

/* Add these to your existing styles */
.disabled-link {
    color: #6c757d !important;
    cursor: not-allowed;
    opacity: 0.6;
}

.admin-link {
    color: #000;
    transition: color 0.3s ease;
}

.admin-link:hover {
    color: #007bff;
    text-decoration: none;
}

.admin-controls {
    border-top: 1px solid #eee;
    padding-top: 15px;
    margin-top: 15px;
}
    </style>
</head>
<body>
    <div>
        <%- include('partials/navbar') %>
        <div class="container mt-3">
            <div class="d-flex justify-content-end">
                <div class="auth-buttons">
                    <% if (!isAuthenticated) { %> 
                        <button class="btn btn-outline-primary mr-2" onclick="toggleLoginModal()">Login</button>
                        <button class="btn btn-primary" onclick="toggleSignupModal()">Sign Up</button>
                    <% } %> 
                </div>
            </div>
        </div>
                
                <div class="modal-overlay" id="authOverlay" onclick="closeAllModals()"></div>

                <div id="loginModal" class="auth-modal">
                    <div class="auth-header">
                        <h4>Admin Login</h4>
                        <button class="close-auth" onclick="closeAllModals()">&times;</button>
                    </div>
                    <form action="/admin/adminLogin" method="POST">
                        <div class="form-group">
                            <input type="email" class="form-control" name="email" placeholder="Email" required>
                        </div>
                        <div class="form-group password-container">
                            <input type="password" class="form-control" name="password" id="adminPassword" placeholder="Password" required>
                            <span class="toggle-password" onclick="togglePasswordVisibility('adminPassword')">
                                <i class="fas fa-eye"></i>
                            </span>
                        </div>
                        <div class="form-group password-container">
                            <input type="password" class="form-control" name="secretKey" id="adminSecretKey" placeholder="Secret Key" required>
                            <span class="toggle-password" onclick="togglePasswordVisibility('adminSecretKey')">
                                <i class="fas fa-eye"></i>
                            </span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                        <div class="auth-switch">
                            Don't have an account? <a onclick="toggleSignupModal()">Sign Up</a>
                        </div>
                    </form>
                </div>

                <div id="signupModal" class="auth-modal">
                    <div class="auth-header">
                        <h4>Admin Signup</h4>
                        <button class="close-auth" onclick="closeAllModals()">&times;</button>
                    </div>
                    <form action="/admin/adminSignup" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="firstname" placeholder="First Name" required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="lastname" placeholder="Last Name" required>
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" name="email" placeholder="Email" required>
                        </div>
                        <div class="form-group password-container">
                            <input type="password" class="form-control" name="password" id="adminSignupPassword" placeholder="Password" required>
                            <span class="toggle-password" onclick="togglePasswordVisibility('adminSignupPassword')">
                                <i class="fas fa-eye"></i>
                            </span>
                        </div>
                        <div class="form-group password-container">
                            <input type="password" class="form-control" name="secretKey" id="adminSignupSecretKey" placeholder="Secret Key" required>
                            <span class="toggle-password" onclick="togglePasswordVisibility('adminSignupSecretKey')">
                                <i class="fas fa-eye"></i>
                            </span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
                        <div class="auth-switch">
                            Already have an account? <a onclick="toggleLoginModal()">Login</a>
                        </div>
                    </form>
                </div>
                     
            <% if (messages.error) { %>
                <div class="alert alert-danger"><%= messages.error %></div>
            <% } %>
            <% if (messages.success) { %>
                <div class="alert alert-success"><%= messages.success %></div>
            <% } %>
            
            <% if (isAuthenticated) { %>
                <div class="nav-item">
                        <form action="/logout" method="POST">
                          <button type="submit" class="btn btn-primary" 
                                  style="font-weight:bold; font-size:15px; border-radius: 20px; padding:8px 25px;">
                            LOG OUT
                          </button>
                        </form>
                </div>
            <% } %>

        </nav>
    </div>
     
    <div class="container">
        <% if (isAuthenticated) { %>
            <h1>Welcome, <%= admin.firstname %>!</h1>
        <% } else { %>
        <h1 class="text-center my-4">Welcome to the Admin Portal</h1>
        <% } %>
    </div>

    <div class="putin">
        <div class="container">
            <div class="row">
                <div class="col-sm-4" style="background-color: #E6E7E9;">
                    <div class="tea">
                        <br><br>
                        <% if (isAuthenticated) { %>
                            <a href="/Admin" class="admin-link">Upload Product Page</a><br><br>
                            <a href="/product" class="admin-link">Product Page</a><br><br>
                            <a href="/order" class="admin-link">Orders <span class="badge bg-danger"><%= newOrdersCount %></span></a>
                        <% } else { %>
